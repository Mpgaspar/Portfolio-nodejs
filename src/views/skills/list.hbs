<div class="container p-4">
    <div class="row">
        
        {{#each skills}}
            <div class="col-md-3">
                <div class="card bg-light mb-3">
                    <div class="card-body">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/skills/edit/{{id}}" class="btn btn-outline-secondary">Edit</a>
                        <a href="/skills/delete/{{id}}" class="btn btn-outline-danger">Delete Skill</a> 
                    </div>
                </div>
            </div>   
        {{/each}}
    </div>
    <div class="row col-md-4 mx-auto">
        <a href="/skills/add" class="btn btn-info btn-block">Add Skill!<a>
    </div>
</div>