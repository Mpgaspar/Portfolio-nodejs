<div class="container p-4">
    <div class="row">
        
        {{#each links}}
            <div class="col-md-3">
                <div class="card bg-light mb-3 text-center">
                    <div class="card-body">
                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                        <a href="/links/edit/{{id}}" class="btn btn-outline-secondary">Edit</a>
                        <a href="/links/delete/{{id}}" class="btn btn-outline-danger">Delete Tech</a>              
                    </div>
                </div>
            </div>   
        {{/each}}  
    </div>
    <div class="row col-md-4 mx-auto">
            <a href="/links/add" class="btn btn-info btn-block">Add Tech!</a>
    </div>
</div>